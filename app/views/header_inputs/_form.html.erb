<%= form_for @header_input, :html => { :class => "form-horizontal header_input" } do |f| %>

  <% if @header_input.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@header_input.errors.count, "error") %> prohibited this header_input from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @header_input.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'fornecedor', :class => 'control-label col-lg-2' %>
    <div class="col-lg-5">
      <%= f.collection_select(:supplier_id, @suppliers, :id, :name, {include_blank: 'Selecione o fornecedor:'}, :class => 'form-control') %>
    </div>
    <%=f.error_span(:supplier_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit 'Salvar', data: { disable_with: "Processando..." }, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
               header_inputs_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
