<%- model_class = Seller -%>
<div class="page-header">
  <h1>Cadastro de Vendedores</h1>
  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_seller_path,
              :class => 'btn btn-primary' %>
</div>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name('nome') %></th>
      <th><%= model_class.human_attribute_name('fone') %></th>
      <th><%= model_class.human_attribute_name('celular') %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @sellers.each do |seller| %>
      <tr>
        <td><%= link_to seller.name, seller_path(seller) %></td>
        <td><%= seller.phone %></td>
        <td><%= seller.celphone %></td>
        <td><%= seller.email %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_seller_path(seller), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      seller_path(seller),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
