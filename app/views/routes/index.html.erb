<%- model_class = Route -%>
<div class="page-header">
  <h1>Cadastro de rotas</h1>
  <%= link_to t('.new', :default => t("helpers.links.new")), new_route_path, :class => 'btn btn-primary' %>
</div>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Criado em</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td><%= link_to route.name, route_path(route) %></td>
        <td><%= route.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      route_path(route), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_route_path(route), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      route_path(route),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
