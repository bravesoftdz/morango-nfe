<%= form_for @cancel_numeral, :html => { :class => "form-horizontal cancel_numeral" } do |f| %>

  <% if @cancel_numeral.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@cancel_numeral.errors.count, "error") %> prohibited this cancel_numeral from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @cancel_numeral.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

       <%= f.hidden_field :cnpj, :value=> @show_emitente.cnpj %>
       <%= f.hidden_field :user, :value=> current_user.name %>
        
  <div class="form-group">
    <%= f.label 'Série', :class => 'control-label col-lg-2' %>
    <div class="col-lg-1">
      <%= f.text_field :serie, :class => 'form-control',maxlength: 1, id: 'serie' %>
    </div>
    <%=f.error_span(:serie) %>
  </div>
  <div class="form-group">
    <%= f.label 'Numeração inicial', :class => 'control-label col-lg-2' %>
    <div class="col-lg-1">
      <%= f.text_field :inicial_number, :class => 'form-control',maxlength: 5, id:'num-ini' %>
    </div>
    <%=f.error_span(:inicial_number) %>
  </div>
  <div class="form-group">
    <%= f.label 'Numeração final', :class => 'control-label col-lg-2' %>
    <div class="col-lg-1">
      <%= f.text_field :final_number, :class => 'form-control',maxlength: 5, id: 'num-fin' %>
    </div>
    <%=f.error_span(:final_number) %>
  </div>
  <div class="form-group">
    <%= f.label :justificativa, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :justificativa, class: "form-control", cols: "10", rows: "5", placeholder: "Digite..." -%>
    </div>
    <%=f.error_span(:justificativa) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit 'Enviar', data: { disable_with: "Processando..." }, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                cancel_numerals_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
